[
    //Specialize thatch and hay roofing
    {   "file": "inworldroofing:blocktypes/thatchframe.json",
        "side": "server",
        "path": "/attributes/nextStageByType/thatchframe-tip-east/game:thatch",
        "op": "replace",
        "value": "artofgrowing:slantedroofingtip-thatch-free",
        "dependsOn": [{"modid": "artofgrowing"}]
    },
    {   "file": "inworldroofing:blocktypes/thatchframe.json",
        "path": "/attributes/nextStageByType/*/game:thatch",
        "op": "replace",
        "value": "thatchwork-{shape}-straw-{horizontalorientation}-1",
        "dependsOn": [{"modid": "artofgrowing"}]
    },

    // Add straw variant to thatchwork
    {   "file": "inworldroofing:blocktypes/thatchwork.json",
        "side": "server",
        "path": "/variantgroups/1/states/-",
        "op": "add",
        "value": "straw",
        "dependsOn": [{"modid": "artofgrowing"}]
    },
    
    //Specialize thatch and hay from upgradeMaterial
    {   "file": "inworldroofing:blocktypes/thatchwork.json",
        "side": "server",
        "path": "/attributes/upgradeMaterialByType/*-thatch-*/0",
        "op": "remove",
        "dependsOn": [{"modid": "artofgrowing"}]
    },
    {   "file": "inworldroofing:blocktypes/thatchwork.json",
        "side": "server",
        "path": "/attributes/upgradeMaterialByType/*-straw-*",
        "op": "add",
        "value": [ "game:thatch" ],
        "dependsOn": [{"modid": "artofgrowing"}]
    },

    //Add nextStageByType attribute for straw
    {   "file": "inworldroofing:blocktypes/thatchwork.json",
        "side": "server",
        "path": "/attributes/nextStageByType",
        "op": "addMerge",
        "value": {
            "*-bottom-straw-*-1": "artofgrowing:slantedroofingbottom-thatch-{horizontalorientation}-free",
            "*-halfleft-straw-*-1": "artofgrowing:slantedroofinghalfleft-thatch-{horizontalorientation}-free",
            "*-halfright-straw-*-1": "artofgrowing:slantedroofinghalfright-thatch-{horizontalorientation}-free",
            "*-ridgeend-straw-*-1": "artofgrowing:slantedroofingridgeend-thatch-{horizontalorientation}-free",
            "*-ridgehalfleft-straw-*-1": "artofgrowing:slantedroofingridgehalfleft-thatch-{horizontalorientation}-free",
            "*-ridgehalfright-straw-*-1": "artofgrowing:slantedroofingridgehalfright-thatch-{horizontalorientation}-free",
            "*-straw-*-1": "thatchwork-{shape}-{material}-{horizontalorientation}-2",

            "*-cornerouter-straw-*-2": "artofgrowing:slantedroofingcornerouter-thatch-{horizontalorientation}-free",
            "*-top-straw-*-2": "artofgrowing:slantedroofingtop-thatch-{horizontalorientation}-free",
            "*-ridge-straw-north-2": "artofgrowing:slantedroofingridge-thatch-we-free",
            "*-ridge-straw-east-2": "artofgrowing:slantedroofingridge-thatch-ns-free",
            "*-straw-*-2": "thatchwork-{shape}-{material}-{horizontalorientation}-3",

            "*-straight-straw-*-3": "artofgrowing:slantedroofing-thatch-{horizontalorientation}-free",
            "*-cornerinner-straw-*-3": "artofgrowing:slantedroofingcornerinner-thatch-{horizontalorientation}-free"
        },
        "dependsOn": [{"modid": "artofgrowing"}]
    },

    //Add textures for straw roofing
    {   "file": "inworldroofing:blocktypes/thatchwork.json",
        "side": "server",
        "path": "/texturesByType/*-straw-*",
        "op": "add",
        "value": {
            "frame": { "base": "game:block/wood/oak"},
            "base-side": { "base": "artofgrowing:block/thatch/normal-side"},
            "material-side": { "base": "artofgrowing:block/thatch/normal-side"},
            "material-top": { "base": "artofgrowing:block/thatch/normal-top"},
            "straw1": { "base": "artofgrowing:block/thatch/straw1"}
        },
        "dependsOn": [{"modid": "artofgrowing"}]
    },

